<main class="main-page fade-in">
    <div class="name-use">
        <h1 class="title">Use your<br><span>hand</span><br>to draw</h1>
    </div>
    <div class='sketch-button'>
        <div id="mySketch"></div>
        <button class="saveButton b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f5" id="submitButton">SAVE</button>
    </div>

    {{#if isUserLoggedIn}}
    <div id="knobs"></div>
    {{else}}
    <p id="notLogged" style="">Log in for full experience!</p>
    {{/if}}
    </div>
    <div id="knobs" style="display: none"></div>
</main>
